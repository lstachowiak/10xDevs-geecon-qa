---
import { SessionJoinForm } from "@/components/SessionJoinForm";
import { AuthActions } from "@/components/AuthActions";

const user = Astro.locals.user;
---

<div class="container mx-auto py-8 space-y-8 min-h-screen flex flex-col">
  <!-- Auth Actions - top right corner -->
  <div class="flex justify-end">
    <AuthActions isAuthenticated={!!user} client:load />
  </div>

  <div class="flex-1 flex items-center justify-center">
    <div class="max-w-2xl w-full space-y-8">
      <div class="text-center space-y-4">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold">Dołącz do sesji Q&A</h1>
        <p class="text-lg sm:text-xl text-muted-foreground max-w-lg mx-auto">
          Wprowadź kod sesji, aby zadawać pytania i uczestniczyć w dyskusji
        </p>
      </div>

      <div class="pt-4">
        <SessionJoinForm client:load />
      </div>

      <div class="pt-8 border-t">
        <p class="text-center text-sm text-muted-foreground">
          Nie masz kodu sesji? Skontaktuj się z organizatorem konferencji.
        </p>
      </div>
    </div>
  </div>
</div>
